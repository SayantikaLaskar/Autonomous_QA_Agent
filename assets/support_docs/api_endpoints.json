{
  "api_version": "1.0",
  "base_url": "https://api.eshop.com/v1",
  "endpoints": {
    "cart": {
      "add_item": {
        "method": "POST",
        "path": "/cart/add",
        "description": "Add item to shopping cart",
        "parameters": {
          "product_id": {
            "type": "integer",
            "required": true,
            "description": "Unique product identifier"
          },
          "quantity": {
            "type": "integer",
            "required": true,
            "minimum": 1,
            "description": "Number of items to add"
          }
        },
        "response": {
          "success": {
            "cart_total": "number",
            "item_count": "integer"
          }
        }
      },
      "update_quantity": {
        "method": "PUT",
        "path": "/cart/update",
        "description": "Update item quantity in cart",
        "parameters": {
          "product_id": {
            "type": "integer",
            "required": true
          },
          "quantity": {
            "type": "integer",
            "required": true,
            "minimum": 0,
            "description": "New quantity (0 to remove item)"
          }
        }
      },
      "remove_item": {
        "method": "DELETE",
        "path": "/cart/remove/{product_id}",
        "description": "Remove item from cart"
      }
    },
    "discount": {
      "apply_coupon": {
        "method": "POST",
        "path": "/discount/apply",
        "description": "Apply discount code to order",
        "parameters": {
          "code": {
            "type": "string",
            "required": true,
            "description": "Discount code (e.g., SAVE15)"
          },
          "cart_total": {
            "type": "number",
            "required": true,
            "description": "Current cart subtotal"
          }
        },
        "response": {
          "success": {
            "discount_amount": "number",
            "discount_percentage": "number",
            "new_total": "number"
          },
          "error": {
            "message": "Invalid discount code"
          }
        }
      },
      "validate_code": {
        "method": "GET",
        "path": "/discount/validate/{code}",
        "description": "Validate discount code without applying",
        "response": {
          "valid": "boolean",
          "discount_percentage": "number"
        }
      }
    },
    "order": {
      "submit_order": {
        "method": "POST",
        "path": "/order/submit",
        "description": "Submit order for processing",
        "parameters": {
          "customer_details": {
            "type": "object",
            "required": true,
            "properties": {
              "name": {
                "type": "string",
                "required": true,
                "min_length": 1
              },
              "email": {
                "type": "string",
                "required": true,
                "format": "email"
              },
              "address": {
                "type": "string",
                "required": true,
                "min_length": 10
              }
            }
          },
          "shipping_method": {
            "type": "string",
            "required": true,
            "enum": ["standard", "express"]
          },
          "payment_method": {
            "type": "string",
            "required": true,
            "enum": ["creditcard", "paypal"]
          },
          "cart_items": {
            "type": "array",
            "required": true,
            "min_items": 1
          },
          "discount_code": {
            "type": "string",
            "required": false
          }
        },
        "response": {
          "success": {
            "order_id": "string",
            "confirmation_number": "string",
            "total_amount": "number",
            "estimated_delivery": "string"
          }
        }
      },
      "calculate_total": {
        "method": "POST",
        "path": "/order/calculate",
        "description": "Calculate order total with shipping and discounts",
        "parameters": {
          "cart_items": {
            "type": "array",
            "required": true
          },
          "shipping_method": {
            "type": "string",
            "required": true
          },
          "discount_code": {
            "type": "string",
            "required": false
          }
        },
        "response": {
          "subtotal": "number",
          "discount_amount": "number",
          "shipping_cost": "number",
          "total": "number"
        }
      }
    },
    "validation": {
      "validate_email": {
        "method": "POST",
        "path": "/validation/email",
        "description": "Validate email address format",
        "parameters": {
          "email": {
            "type": "string",
            "required": true
          }
        },
        "response": {
          "valid": "boolean",
          "message": "string"
        }
      },
      "validate_address": {
        "method": "POST",
        "path": "/validation/address",
        "description": "Validate shipping address",
        "parameters": {
          "address": {
            "type": "string",
            "required": true
          }
        },
        "response": {
          "valid": "boolean",
          "formatted_address": "string"
        }
      }
    }
  },
  "error_codes": {
    "400": "Bad Request - Invalid parameters",
    "404": "Not Found - Resource not found",
    "422": "Validation Error - Invalid data format",
    "500": "Internal Server Error"
  },
  "rate_limits": {
    "requests_per_minute": 100,
    "burst_limit": 20
  }
}